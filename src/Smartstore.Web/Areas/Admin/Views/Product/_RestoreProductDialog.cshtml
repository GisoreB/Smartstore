@model ProductRecycleBinModel

<modal id="restore-products-window" sm-render-at-page-end="true" sm-size="Medium">
    <modal-header sm-title="@T("Common.Restore")"></modal-header>
    <modal-body>
        <form id="restore-products-form" asp-action="RestoreProducts" method="post">
            <input type="hidden" asp-for="ProductIds" />

            <div class="adminContent">
                <div class="adminRow">
                    <div class="adminTitle">
                        <smart-label asp-for="PublishAfterRestore" />
                    </div>
                    <div class="adminData">
                        <editor asp-for="PublishAfterRestore" />
                    </div>
                </div>
            </div>
        </form>
    </modal-body>
    <modal-footer>
        <button class="btn btn-secondary btn-flat" data-dismiss="modal">
            <span>@T("Common.Cancel")</span>
        </button>
        <button id="btn-restore-products" class="btn btn-primary">
            <span>@T("Common.OK")</span>
        </button>
    </modal-footer>
</modal>