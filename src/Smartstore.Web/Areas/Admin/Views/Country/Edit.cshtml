@using Smartstore.Admin.Models.Common

@model CountryModel

@{
    ViewBag.Title = T("Admin.Configuration.Countries.EditCountryDetails").Value;
}

<form asp-action="Edit" id="country-form">
    <div class="section-header">
        <div class="title">
            <a sm-backto asp-action="List"></a>
            <span>@T("Admin.Configuration.Countries.EditCountryDetails") - @Model.Name</span>
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="btn btn-warning">
                <i class="fa fa-check"></i>
                <span>@T("Admin.Common.Save")</span>
            </button>
            <button type="submit" name="save" value="save-continue" class="btn btn-secondary">
                <span>@T("Admin.Common.SaveContinue")</span>
            </button>
            <span id="country-delete" class="btn btn-danger">
                <i class="far fa-trash-can"></i>
                <span>@T("Admin.Common.Delete")</span>
            </span>
            <confirm button-id="country-delete" />
        </div>
    </div>

    <partial name="_CreateOrUpdate" model="Model" />
</form>

