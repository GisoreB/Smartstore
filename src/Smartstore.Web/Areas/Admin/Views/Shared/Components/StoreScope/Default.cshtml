@using Smartstore.Admin.Models
 
@model StoreScopeConfigurationModel

<div class="multi-store-scope well border p-0">
    <div class="adminContent adminContent-boxed">
        <div class="adminRow">
            <div class="adminTitle">
                @Html.SmartLabel("store-scope-configuration", T("Admin.Configuration.Settings.StoreScope"))
            </div>
            <div class="adminData">
                <select id="store-scope-configuration" asp-items="Model.AllStores" onchange="setLocation(this.value);"></select>
            </div>
        </div>
        <div sm-if="Model.StoreId > 0" class="adminRow">
            <div class="adminTitle">&nbsp;</div>
            <div class="adminData wide">
                <div class="form-check form-switch">
                    <input type="checkbox" class="form-check-input" id="override-settings" onclick="Smartstore.Admin.checkAllOverriddenStoreValue(this)">
                    <label class="form-check-label" for="override-settings">@T("Admin.Configuration.Settings.StoreScope.CheckAll.Hint")</label>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
	$(function () {
		$('#store-scope-configuration').selectWrapper();
	});
</script>