@using Smartstore.Admin.Models.Common

@model PriceLabelModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

@(Html.LocalizedEditor<PriceLabelModel, PriceLabelLocalizedModel>("price-label-info-localized",
    @<div class="adminContent">
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="Locales[item].ShortName" />
            </div>
            <div class="adminData">
                @*IMPORTANT: Do not delete, this hidden element contains the id to assign localized values to the corresponding language *@
                <input asp-for="Locales[item].LanguageId" type="hidden" />
                <input asp-for="Locales[item].ShortName" />
                <span asp-validation-for="Locales[item].ShortName"></span>
            </div>
        </div>
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="Locales[item].Name" />
            </div>
            <div class="adminData">
                <input asp-for="Locales[item].Name" />
                <span asp-validation-for="Locales[item].Name"></span>
            </div>
        </div>
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="Locales[item].Description" />
            </div>
            <div class="adminData">
                <textarea rows="3" asp-for="Locales[item].Description"></textarea>
                <span asp-validation-for="Locales[item].Description"></span>
            </div>
        </div>
    </div>
    ,
    @<div class="adminContent">
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="ShortName" />
            </div>
            <div class="adminData">
                <input asp-for="ShortName" />
                <span asp-validation-for="ShortName"></span>
            </div>
        </div>
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="Name" />
            </div>
            <div class="adminData">
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="Description" />
            </div>
            <div class="adminData">
                <textarea rows="3" asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
    </div>
))

<div class="adminContent">
    <div class="adminRow">
        <div class="adminTitle">
            <smart-label asp-for="IsRetailPrice" />
        </div>
        <div class="adminData">
            <editor asp-for="IsRetailPrice" />
            <span asp-validation-for="IsRetailPrice"></span>
        </div>
    </div>
    <div class="adminRow">
        <div class="adminTitle">
            <smart-label asp-for="DisplayShortNameInLists" />
        </div>
        <div class="adminData">
            <editor asp-for="DisplayShortNameInLists" />
            <span asp-validation-for="DisplayShortNameInLists"></span>
        </div>
    </div>
    <div class="adminRow">
        <div class="adminTitle">
            <smart-label asp-for="DisplayOrder" />
        </div>
        <div class="adminData">
            <editor asp-for="DisplayOrder" />
            <span asp-validation-for="DisplayOrder"></span>
        </div>
    </div>
</div>
