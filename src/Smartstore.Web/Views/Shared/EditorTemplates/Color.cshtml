@using Smartstore.Utilities

@functions{
    private string Value
    {
        get
        {
            string value = null;
            if (ViewData.Model != null)
            {
                value = Convert.ToString(ViewData.Model);
            }
            return value;
        }
    }
}

@{
    var attributes = new AttributeDictionary().Merge(ConvertUtility.ObjectToDictionary(ViewData["htmlAttributes"] ?? new object()));
}

<colorbox asp-for="@Model"
          attrs="attributes"
          value="@Value.EmptyNull()"
          sm-swatches="@(GetMetadata<bool>("swatches", true))"
          sm-default-color="@(GetMetadata<string>("fallbackColor"))" />