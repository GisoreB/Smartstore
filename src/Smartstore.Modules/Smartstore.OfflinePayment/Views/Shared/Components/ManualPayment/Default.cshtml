@model ManualPaymentInfoModel

<input type="hidden" name="OfflinePaymentMethodType" value="Manual" />

<div class="opt-form">
    <div class="form-group row">
        <label asp-for="CreditCardTypes" class="col-md-3 col-form-label required"></label>
        <div class="col-md-9">
            <select asp-for="CreditCardType" asp-items="@Model.CreditCardTypes" class="form-control noskin"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CardholderName" class="col-md-3 col-form-label required"></label>
        <div class="col-md-9">
            <input asp-for="CardholderName" />
            <span asp-validation-for="CardholderName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CardNumber" class="col-md-3 col-form-label required"></label>
        <div class="col-md-9">
            <input asp-for="CardNumber" />
            <span asp-validation-for="CardNumber"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ExpireMonth" class="col-md-3 col-form-label required"></label>
        <div class="col-md-9">
            <div class="row sm-gutters">
                <div class="col-6">
                    <select asp-for="ExpireMonth" asp-items="@Model.ExpireMonths" class="form-control noskin"></select>
                </div>
                <div class="col-6">
                    <select asp-for="ExpireYear" asp-items="@Model.ExpireYears" class="form-control noskin"></select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CardCode" class="col-md-3 col-form-label required"></label>
        <div class="col-md-9">
            <input asp-for="CardCode" />
            <span asp-validation-for="CardCode"></span>
        </div>
    </div>
</div>