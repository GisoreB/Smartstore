@model PublicInvoiceModel

<div class="opt-form">
    <div class="form-group row">
        <div class="col-lg-3">
            <label asp-for="DateOfBirth" class="col-form-label required"></label>
        </div>
        <div class="col-lg-9">
            <input type="date" asp-for="DateOfBirth"
                   class="native-validation"
                   max="@DateTime.Now.ToString("yyyy-MM-dd")"
                   min="@DateTime.Now.AddYears(-110).ToString("yyyy-MM-dd")" />

            <span asp-validation-for="DateOfBirth"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-md-3 col-form-label required"></label>
        <div class="col-md-9">
            <div class="input-group">
                <div class="input-group-prepend"><span class="input-group-text">+@Model.DiallingCode</span></div>
                <input asp-for="PhoneNumber" sm-required="true" />
            </div>
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>
</div>

<div class="text-muted">
    @Html.Raw(T("Plugins.Smartstore.PayPal.RatePayLegalHint"))
</div>